{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "module": "es2020",
    "target": "es2019",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,

    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,

    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "jsx": "react"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["server/**/*"]
}